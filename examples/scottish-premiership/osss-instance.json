  "constraints": [
    {
      "id": "no-team-overlap",
      "type": "hard",
      "rule": "no_overlap_team",
      "selector": { "entityType": "team" },
      "description": "A team cannot play two matches at the same time"
    },
    {
      "id": "no-venue-overlap",
      "type": "hard",
      "rule": "no_overlap_venue_resource",
      "selector": { "entityType": "venue" },
      "description": "A venue cannot host two matches at the same time"
    },
    {
      "id": "min-rest-4-days",
      "type": "hard",
      "rule": "min_rest_time",
      "selector": { "entityType": "team" },
      "params": { "min_hours": 96 },
      "description": "Minimum 4 days rest between matches (SPFL rule)"
    },
    {
      "id": "phase-1-split",
      "type": "hard",
      "rule": "phase_split",
      "selector": { "phase": "phase-1" },
      "params": {
        "split_after_round": 33,
        "groups": [
          { "name": "top-6", "size": 6, "standing_range": { "from": 1, "to": 6 } },
          { "name": "bottom-6", "size": 6, "standing_range": { "from": 7, "to": 12 } }
        ],
        "carry_over_points": true
      },
      "description": "League splits into Top 6 and Bottom 6 after round 33"
    },
    {
      "id": "max-meetings-phase-1",
      "type": "hard",
      "rule": "max_rematches_in_phase",
      "selector": { "phase": "phase-1" },
      "params": { "max_meetings": 3, "scope": "phase", "phase_id": "phase-1" },
      "description": "Each pair of teams meets exactly 3 times in Phase 1"
    },
    {
      "id": "max-meetings-season",
      "type": "hard",
      "rule": "max_rematches_in_phase",
      "selector": { "entityType": "team" },
      "params": { "max_meetings": 4, "scope": "season" },
      "description": "Each pair of teams meets at most 4 times in the full season"
    },
    {
      "id": "home-away-asymmetry",
      "type": "soft",
      "rule": "home_away_asymmetry_tolerance",
      "selector": { "entityType": "team" },
      "params": { "max_imbalance": 5 },
      "penalty": { "model": "linear", "weight": 5 },
      "description": "Allow up to 5 game imbalance (e.g., 19 home / 14 away is acceptable)"
    },
    {
      "id": "max-consecutive-away",
      "type": "soft",
      "rule": "max_consecutive_away",
      "selector": { "entityType": "team" },
      "params": { "max_away": 3 },
      "penalty": { "model": "exponential", "weight": 20, "multiplier": 2 },
      "description": "Avoid more than 3 consecutive away games"
    },
    {
      "id": "max-consecutive-home",
      "type": "soft",
      "rule": "max_consecutive_home",
      "selector": { "entityType": "team" },
      "params": { "max_home": 3 },
      "penalty": { "model": "linear", "weight": 10 },
      "description": "Avoid more than 3 consecutive home games"
    },
    {
      "id": "derby-spacing",
      "type": "soft",
      "rule": "opponent_spacing",
      "selector": { "tags": ["rivalry"] },
      "params": { "min_days_between_meetings": 42 },
      "penalty": { "model": "linear", "weight": 15 },
      "description": "At least 6 weeks between derby rematches (Old Firm, Edinburgh Derby)"
    },
    {
      "id": "broadcast-window-saturday",
      "type": "soft",
      "rule": "time_window",
      "selector": { "tags": ["high-profile"] },
      "params": {
        "allowed_days": ["Saturday"],
        "allowed_hours": { "start": "12:00", "end": "17:30" }
      },
      "penalty": { "model": "linear", "weight": 25 },
      "description": "High-profile matches (Old Firm) should be Saturday lunchtime or 3pm for TV"
    },
    {
      "id": "highlands-travel",
      "type": "soft",
      "rule": "min_rest_time",
      "selector": { "teams": ["ross-county", "aberdeen"] },
      "params": { "min_hours": 120 },
      "penalty": { "model": "linear", "weight": 10 },
      "description": "Extra rest for Highland teams due to travel distances"
    }
  ],
  "objectives": [
    {
      "metric": "home_away_balance",
      "aggregation": "max",
      "weight": 0.3,
      "description": "Minimize the worst home/away imbalance across all teams"
    },
    {
      "metric": "total_travel_distance",
      "aggregation": "sum",
      "weight": 0.25,
      "description": "Minimize total travel for all teams (especially Ross County)"
    },
    {
      "metric": "rest_fairness",
      "aggregation": "stddev",
      "weight": 0.2,
      "description": "Ensure rest time is fairly distributed across teams"
    },
    {
      "metric": "broadcast_coverage",
      "aggregation": "count",
      "weight": 0.15,
      "description": "Maximize matches in broadcast windows"
    },
    {
      "metric": "competitive_balance",
      "aggregation": "composite",
      "weight": 0.1,
      "description": "Overall schedule fairness score"
    }
  ],
  "metadata": {
    "format_notes": [
      "Triple round-robin Phase 1 creates 33 rounds (each team plays 33 matches)",
      "Phase 2 split creates 5 additional rounds (38 total matches per team)",
      "Home/away assignment for third meeting of each pair depends on prior assignments",
      "Split groups determined by standings after round 33 - fixtures are conditional",
      "Teams may end up with 19 home/14 away or 14 home/19 away - asymmetry accepted"
    ],
    "broadcast_partners": ["Sky Sports", "BBC Scotland"],
    "typical_kickoff_times": [
      "Saturday 12:30 (early TV)",
      "Saturday 15:00 (traditional)",
      "Saturday 17:30 (late TV)",
      "Sunday 12:00 (TV)",
      "Midweek 19:45"
    ]
  }
}
