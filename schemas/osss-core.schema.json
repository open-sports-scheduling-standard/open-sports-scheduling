{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://opensportsscheduling.org/schemas/osss-core.schema.json",
  "title": "OSSS Core Schema",
  "type": "object",
  "required": ["id", "name", "timezone", "season", "entities", "fixtures"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the OSSS instance"
    },
    "name": {
      "type": "string"
    },
    "timezone": {
      "type": "string",
      "description": "IANA timezone (e.g. America/New_York)"
    },
    "season": {
      "type": "object",
      "required": ["start", "end"],
      "properties": {
        "start": { "type": "string", "description": "Season start date (YYYY-MM-DD or ISO 8601)" },
        "end": { "type": "string", "description": "Season end date (YYYY-MM-DD or ISO 8601)" },
        "phases": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "name"],
            "properties": {
              "id": { "type": "string" },
              "name": { "type": "string" },
              "startDate": { "type": "string" },
              "endDate": { "type": "string" },
              "description": { "type": "string" },
              "rounds": { "type": "integer" },
              "dynamic": { "type": "boolean" }
            }
          }
        }
      }
    },
    "entities": {
      "type": "object",
      "required": ["teams", "venues"],
      "properties": {
        "teams": {
          "type": "array",
          "items": { "$ref": "#/$defs/team" }
        },
        "venues": {
          "type": "array",
          "items": { "$ref": "#/$defs/venue" }
        },
        "officials": {
          "type": "array",
          "items": { "$ref": "#/$defs/official" }
        }
      }
    },
    "fixtures": {
      "type": "array",
      "items": { "$ref": "#/$defs/fixture" }
    },
    "defaultFixtureDuration": {
      "type": "integer",
      "minimum": 1,
      "description": "Default duration in minutes for fixtures that don't specify durationMinutes"
    }
  },

  "$defs": {
    "baseEntity": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "team": {
      "allOf": [
        { "$ref": "#/$defs/baseEntity" },
        {
          "type": "object",
          "properties": {
            "homeVenueId": { "type": "string" },
            "division": { "type": "string" }
          }
        }
      ]
    },

    "venue": {
      "allOf": [
        { "$ref": "#/$defs/baseEntity" },
        {
          "type": "object",
          "properties": {
            "capacity": { "type": "integer" },
            "location": {
              "type": "object",
              "properties": {
                "lat": { "type": "number" },
                "lon": { "type": "number" }
              }
            }
          }
        }
      ]
    },

    "official": {
      "allOf": [
        { "$ref": "#/$defs/baseEntity" },
        {
          "type": "object",
          "properties": {
            "qualificationLevel": { "type": "string" }
          }
        }
      ]
    },

    "fixture": {
      "type": "object",
      "required": ["id", "participants"],
      "properties": {
        "id": { "type": "string" },
        "participants": {
          "type": "array",
          "minItems": 2,
          "items": {
            "oneOf": [
              { "type": "string" },
              {
                "type": "object",
                "required": ["id"],
                "properties": {
                  "id": { "type": "string" },
                  "role": { "type": "string", "enum": ["home", "away", "neutral", "participant"] }
                }
              }
            ]
          }
        },
        "durationMinutes": {
          "type": "integer",
          "minimum": 1,
          "description": "Duration in minutes. Optional if defaultFixtureDuration is set at root level."
        },
        "competitionPhase": { "type": "string" },
        "round": { "oneOf": [{ "type": "integer", "minimum": 1 }, { "type": "string" }] },
        "phase": { "type": "string" },
        "group": { "type": "string" },
        "conditional": {
          "oneOf": [
            { "type": "boolean" },
            {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "group": { "type": "string" },
                "condition": { "type": "string" }
              }
            }
          ],
          "description": "Whether fixture is conditional (boolean) or condition details (object)"
        },
        "locked": { "type": "boolean", "default": false }
      }
    }
  }
}
